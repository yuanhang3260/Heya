<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>Heya</display-name>
  <description>Heya Configuration</description>

  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>servlet.HelloServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Signup</servlet-name>
    <servlet-class>servlet.SignupServlet</servlet-class>

    <init-param>
      <param-name>requireSSL</param-name>
      <param-value>false</param-value>
    </init-param>
        
    <init-param>
      <param-name>dataDirectory</param-name>
      <param-value>/home/hy/WebStorage/Heya/</param-value>
    </init-param>

    <init-param>
      <param-name>jdbcDriverName</param-name> 
      <param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
    
    <init-param>
      <param-name>jdbcURL</param-name> 
      <param-value>jdbc:mysql:///Heya</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>servlet.HomeServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Image</servlet-name>
    <servlet-class>servlet.ImageServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StaticFile</servlet-name>
    <servlet-class>servlet.FileServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserInfo</servlet-name>
    <servlet-class>servlet.UserInfoServlet</servlet-class>
  </servlet>
    

  <!-- SERVLETS MAPPINGS -->
  <servlet-mapping>
    <servlet-name>HelloWorld</servlet-name>
    <url-pattern>/sayhello</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Image</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>StaticFile</servlet-name>
    <url-pattern>/data/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UserInfo</servlet-name>
    <url-pattern>/getuserinfo</url-pattern>
  </servlet-mapping>

  <!-- CONFIG -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <login-config>
    <auth-method>BASIC</auth-method>
  </login-config>

  <context-param> 
    <description>Location to store files</description> 
    <param-name>data-storage</param-name> 
    <param-value>/home/hy/WebStorage/Heya/</param-value> 
  </context-param>
</web-app>
